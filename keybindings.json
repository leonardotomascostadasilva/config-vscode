[
  {
    "key": "alt+t",
    "command": "workbench.action.togglePanel",
    "when": "!terminalFocus"
  }, // Atalho para alternar a visibilidade do painel quando pressionado Alt + T, quando o foco não está no terminal.
  {
    "key": "alt+t",
    "command": "workbench.action.terminal.kill",
    "when": "terminalFocus"
  }, // Atalho para fechar o terminal atual quando pressionado Alt + T, quando o foco está no terminal.
  {
    "key": "alt+e",
    "command": "workbench.view.explorer"
  }, // Atalho para abrir o Explorer de Projeto quando pressionado Alt + E.
  {
    "key": "n",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus && !inputFocus"
  }, // Atalho para criar um novo arquivo no Explorer de Arquivos quando pressionado 'n', com o foco no Explorer de Arquivos e sem foco em um campo de entrada.
  {
    "command": "renameFile",
    "key": "r",
    "when": "filesExplorerFocus && !inputFocus"
  }, // Atalho para renomear um arquivo quando pressionado 'r', com o foco no Explorer de Arquivos e sem foco em um campo de entrada.
  {
    "key": "shift+n",
    "command": "explorer.newFolder",
    "when": "explorerViewletFocus"
  }, // Atalho para criar uma nova pasta quando pressionado Shift + 'n', com o foco na visualização do Explorer de Arquivos.
  {
    "key": "shift+n",
    "command": "workbench.action.newWindow",
    "when": "!explorerViewletFocus"
  }, // Atalho para abrir uma nova janela quando pressionado Shift + 'n', sem o foco na visualização do Explorer de Arquivos.
  {
    "command": "deleteFile",
    "key": "d",
    "when": "filesExplorerFocus && !inputFocus"
  } // Atalho para excluir um arquivo quando pressionado 'd', com o foco no Explorer de Arquivos e sem foco em um campo de entrada.
]
